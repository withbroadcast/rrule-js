{
  "compilerOptions": {
    "noEmit": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "target": "es6",
    "baseUrl": ".",
    "rootDirs": ["./src/", "./test/"],
    "sourceRoot": "./dist/esm"
  },
  "include": ["./src/**/*", "./test/**/*"],
  "exclude": ["node_modules"]
}
